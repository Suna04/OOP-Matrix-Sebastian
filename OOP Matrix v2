#ifndef MATRIX__KOORDINATE_H
#define MATRIX__KOORDINATE_H

using namespace std;


class Koordinate {
    int x;
    int y;

public:
    Koordinate();
    void setX(int x);
    void setY(int y);
    void ausgabe();
};

#endif //MATRIX__KOORDINATE_H
-----------------------------------
//Matrix.h
// Created by Maximilian Timonin on 14.01.26.
//

#ifndef MATRIX__MATRIX_H
#define MATRIX__MATRIX_H
#include "Koordinate.h"

using namespace std;


class Matrix {

    Koordinate feld[5][5];

public:
    Matrix();
    void printKoordinaten();
};

#endif //MATRIX__MATRIX_H

// Matrix.h beschreibt WAS für ein Objekt das ist
----------------------------------------------------
// Koordinate.cpp
// Created by Maximilian Timonin on 14.01.26.
//

#include "../include /Koordinate.h"
#include "../include /Matrix.h"
#include <iostream>


Koordinate::Koordinate() {
    this-> x = 0;
    this-> y = 0;
}

void Koordinate::setX(int x) {
     this-> x = x;
}

void Koordinate::setY(int y) {
     this-> y = y;
}

void Koordinate::ausgabe() {
    cout << "(" << x << "|" << y << ")";

}
// Soll beschreiben wie es funktioniert
-------------------------------------------
//Matrix.cpp
// Created by Maximilian Timonin on 14.01.26.
//

#include "../include /Matrix.h"
#include <iostream>


// Sebastian: y und x müssen verdreht sein, im ersten feld immer y im zweiten immer x
    Matrix::Matrix() {
        for (int y = 0; y < 5; y++) {
            for (int x = 0; x < 5; x++ ) {
                feld[y][x].setY(y);
                feld[y][x].setX(x);
            }
        }
    }

    void Matrix::printKoordinaten() {
        for (int y = 0; y < 5; y++) {
            for (int x = 0; x < 5; x++ ) {
                feld[y][x].ausgabe();
                //feld[y][x].ausgabe();
            }cout << endl;
        }
    }

// Matrix.cpp beschreibt WIE es funktioniert

--------------------------------------------
#include "include /Matrix.h"

// main.cpp benutzt die Matrix

#include "include /Matrix.h"

int main() {
Matrix *p1 = new Matrix();
    p1->printKoordinaten();

    //Matrix.printKoordinaten();
    return 0;
}
