//Schiff.cpp
// Created by Maximilian Timonin on 17.01.26.
//

#include "../include/Schiff.h"
#include <iostream>

using namespace std;

Schiff::Schiff(Koordinate start, int direction) {
    this->direction = direction;

    int dx = 0;
    int dy = 0;

    switch (direction) {
        case 1: dx = 1; dy = 0;
            break;
        case 2: dx = 0; dy = -1;
            break;
        case -1: dx = -1; dy = 0;
            break;
        case -2: dx = 0; dy = 1;
            break;
    }
    for (int i = 0; i < 4; i++) {
        item[i].setX(start.getX() + i *dx);
        item[i].setY(start.getY() + i *dy);
    }
}
Koordinate Schiff::getItem(int Index) {
    return this->item[Index];
}
void Schiff::ausgabe() {
    for (int i = 0; i < 4; i++) {
        // cout << "(" << item[i].getX() << " " << item[i].getY() << ")\n";
    }
}
