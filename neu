#ifndef MATRIXNEU_KOORDINATE_H
#define MATRIXNEU_KOORDINATE_H
class Koordinate {
    int x;
    int y;
    int value;

public:
    Koordinate();
    void setX(int x);
    void setY(int y);
    void ausgabe(bool Koordinaten);
    void setValue(int value);

    //Schiff
    int getX();
    int getY();
    int getValue();



};
#endif //MATRIXNEU_KOORDINATE_H
