#ifndef MATRIXNEU_SCHIFF_H
#define MATRIXNEU_SCHIFF_H
#include "Koordinate.h"

class Schiff {
      Koordinate item[4];
      int direction;

public:
      Schiff(Koordinate start, int direction);

      Koordinate getItem(int Index);
      void ausgabe();
};
#endif //MATRIXNEU_SCHIFF_H
