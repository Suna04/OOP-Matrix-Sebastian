//Koordinate.cpp
// Created by Maximilian Timonin on 17.01.26.
//

#include "../include/Koordinate.h"
#include <iostream>
using namespace std;

Koordinate::Koordinate() {
this-> x = 0;
    this-> y = 0;
    this-> value = 0;
}

void Koordinate::setX(int x) {
    this-> x = x;
}

void Koordinate::setY(int y) {
    this-> y = y;
}

void Koordinate::ausgabe(bool Koordinaten) {
    if (Koordinaten == true) {
        cout << "(" << x << "|" << y << ")";
    }else {
        cout << value << " ";
    }
}
void Koordinate::setValue(int value) {
    this->value = value;
}

int Koordinate::getX() {
    return this->x;
}
int Koordinate::getY() {
    return this->y;
}

int Koordinate::getValue() { // Schiff
    return this->value;
}
------------------------------------
//Matrix.cpp
// Created by Maximilian Timonin on 17.01.26.
//
#include "../include/Matrix.h"
#include "../include/Koordinate.h"
#include <iostream>
using namespace std;


Matrix::Matrix() {
    for (int y = 0; y < 5; y++) {
        for (int x = 0; x < 5; x++) {
            feld[y][x].setY(y);
            feld[y][x].setX(x);
            feld[y][x].setValue(0);
        }
    }
}

void Matrix::printKoordinaten(bool Koordinaten) {
    for (int y = 0; y < 5; y++) {
        for (int x = 0; x < 5; x++) {

            if (feld[y][x].getValue() == 1) {
                cout << "S";
            } else {
                cout << ".";
            }
        }
        cout << endl;
    }
}

void Matrix::setValueAt(int x, int y, int value) {
    feld[y][x].setValue(value);
}
void Matrix::spawnSchiff(Schiff s, int value) {
    for (int i = 0; i < 4; i++) {
        Koordinate k = s.getItem(i);
        int x = k.getX();
        int y = k.getY();

            setValueAt(x, y, 1); // 1 = Schiff (damit print S ausgibt)

    }
}
