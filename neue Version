    Matrix m1;
    m1.setValueAt(0, 0, 5);
    m1.setValueAt(1, 1, 9);
    m1.setValueAt(2, 2, 3);
    m1.setValueAt(3, 3, 8);
    m1.setValueAt(4, 4, 7);
    m1.printKoordinaten(false);

    //m1.printKoordinaten(true);

